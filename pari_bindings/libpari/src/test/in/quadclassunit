default(parisize, "72M"); \\ overflows 70M
test(D) =
{
  for (d = D, D+10^3,
    if (!isfundamental(d),next);
    print(d, " ", quadclassunit(d).cyc)
  );
}
setrand(1); test(10^15); test(-10^15)

{
  for(i=1,10000,
    my(D=2*i-(i%2));
    if(issquare(D),next());
    my(w=quadunit(D), N=norm(w));
    if(denominator(w)>1 || abs(N)!=1 || quadunitnorm(D) != N, error(D)))
}
